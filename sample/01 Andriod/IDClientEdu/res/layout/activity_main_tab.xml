<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:background="@color/transparent_write"
    	>
    	<FrameLayout 
    		android:id="@android:id/tabcontent"
    		android:layout_width="fill_parent"
    		android:layout_height="0.0dip"
    		android:layout_weight="1.0"/>
    	<TabWidget 
    		android:id="@android:id/tabs"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_weight="0.0"
    		android:visibility="gone"/>
    	<RadioGroup
    		android:id="@+id/main_tab"
    		android:background="@drawable/maintab_toolbar_bg"
    		android:orientation="horizontal"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:gravity="center_vertical"
    		android:layout_gravity="bottom">
    		
    		<RadioButton 
    			android:layout_marginTop="2.0dip"
    			android:text="@string/tab_notice"
    			android:drawableTop="@drawable/icon_tab_news"
    			android:id="@+id/radio_button0"
    			android:checked="true"
    			style="@style/main_tab_bottom"/>
    		
    		<RadioButton 
    			android:layout_marginTop="2.0dip"
    			android:text="@string/tab_calendar"
    			android:drawableTop="@drawable/icon_tab_calendar"
    			android:id="@+id/radio_button1"
    			style="@style/main_tab_bottom"/>
    		<!-- 
    		<Button 
    			android:layout_marginTop="2.0dip"
    			android:text="@string/tab_add"
    			android:drawableTop="@drawable/icon_tab_add"
    			android:id="@+id/radio_button2"
    			android:onClick="doAddShow"
    			style="@style/main_tab_bottom"/>
    			 -->
    		<RadioButton 
    			android:layout_marginTop="2.0dip"
    			android:text="@string/tab_group"
    			android:drawableTop="@drawable/icon_tab_group"
    			android:id="@+id/radio_button2"
    			style="@style/main_tab_bottom"/>
    		<RadioButton 
    			android:layout_marginTop="2.0dip"
    			android:text="@string/tab_more"
    			android:drawableTop="@drawable/icon_tab_more"
    			android:id="@+id/radio_button3"
    			style="@style/main_tab_bottom"/>
    	</RadioGroup>
    </LinearLayout>
</TabHost>
